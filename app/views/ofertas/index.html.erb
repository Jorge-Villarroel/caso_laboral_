<p id="notice"><%= notice %></p>

<h1>Ofertas Laborales</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Cargo o Puesto</th>
      <th>Descripción</th>
      <th>Rango Salarial</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ofertas.each do |oferta| %>
      <tr>
        <td><%= oferta.cargo %></td>
        <td><%= oferta.descripcion %></td>
        <td>Entre $<%= oferta.salario_min %> a $<%= oferta.salario_max %> CLP.</td>
        <td><%= "" %></td>
        <% if empresa_signed_in? %>
        <td><%= link_to "Ver", oferta, class: "btn btn-outline-dark" %></td>
        <td><%= link_to "Editar", edit_oferta_path(oferta), class: "btn btn-outline-dark" %></td>
        <td><%= link_to "Eliminar", oferta, method: :delete, data: { confirm: "¿Estás seguro?" }, class: "btn btn-outline-dark" %></td>
        <% else %>
		    <td><%= link_to "Ver", oferta, class: "btn btn-outline-dark" %></td>
		<% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= paginate @ofertas %>
<br>
<% if empresa_signed_in? %>
<%= link_to "Agregar nueva oferta", new_oferta_path, class: "btn btn-outline-dark" %>
<% end %>

<% if persona_signed_in? %>
<%= link_to "Ver mis postulaciones", index_path, class: "btn btn-outline-dark" %>
<% end %>


